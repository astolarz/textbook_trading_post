<h1>Listing courses</h1>

<div class="row">
  <div class="span2">Course Number</div>
  <div class="span3">Course Title</div>
  <div class="span3">Instructor</div>
  <div class="span2">Time</div>
  <div class="span1">Session</div>
  <div class="span1"></div>
  <div class="span1"></div>
</div>
<% @courses.each do |course| %>
  <div class="row">
    <div class="span1"><%= link_to "#{course.department} #{course.course_number}", course %></div>
    <div class="span1"><%= link_to course.title, course %></div>
    <div class="span1"><%= course.instructor %></div>
    <div class="span1"><%= "#{course.days} #{course.time}" %></div>
    <div class="span1"><%= "#{course.session} #{course.year}" %></div>
    <div class="span1"><%= link_to "Edit", edit_course_path(course) %></div>
    <div class="span1"><%= link_to "Delete", course, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  </div>
<% end %>

<br />

